<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_boutique">

    <fragment
        android:id="@+id/nav_boutique"
        android:name="fr.ul.iutmetz.wmce.td1.CategoriesFragment"
        android:label="Boutique"
        tools:layout="@layout/categories_fragment">
        <action
            android:id="@+id/action_nav_boutique_to_venteCatalogueFragment2"
            app:destination="@id/venteCatalogueFragment2" />
    </fragment>

    <fragment
        android:id="@+id/nav_connexion"
        android:name="fr.ul.iutmetz.wmce.td1.ConnexionFragment"
        android:label="Connexion"
        tools:layout="@layout/fragment_connexion">
        <action
            android:id="@+id/action_toMonCompteFragment"
            app:destination="@id/nav_mon_compte" />
        <action
            android:id="@+id/action_nav_connexion_to_boutique"
            app:destination="@id/nav_boutique" />
        <action
            android:id="@+id/action_nav_connexion_to_inscription"
            app:destination="@id/SaisieInformationsClientFragment" />
    </fragment>

    <fragment
        android:id="@+id/nav_mon_compte"
        android:name="fr.ul.iutmetz.wmce.td1.MonCompteFragment"
        android:label="Mon Compte"
        tools:layout="@layout/fragment_connexion">
    <action
        android:id="@+id/action_mon_compte_to_modification"
        app:destination="@id/SaisieInformationsClientFragment"/>
    </fragment>

    <fragment
        android:id="@+id/nav_nous_trouver"
        android:name="fr.ul.iutmetz.wmce.td1.MapsFragment"
        android:label="Nous trouver"
        tools:layout="@layout/fragment_maps">
    </fragment>

    <fragment
        android:id="@+id/nav_mentions_legales"
        android:name="fr.ul.iutmetz.wmce.td1.MentionLegalesFragment"
        android:label="Mentions légales"
        tools:layout="@layout/fragment_mention_legales">
    </fragment>



    <fragment
        android:id="@+id/venteCatalogueFragment2"
        android:name="fr.ul.iutmetz.wmce.td1.VenteCatalogueFragment"
        />

    <fragment
        android:id="@+id/SaisieInformationsClientFragment"
        android:name="fr.ul.iutmetz.wmce.td1.SaisieInformationsClientFragment"
        android:label="Saisie Informations" />

    <fragment
        android:id="@+id/DetailCommandeFragment"
        android:name="fr.ul.iutmetz.wmce.td1.DetailCommandeFragment"
        android:label="Détail de la commande" />


    <action
        android:id="@+id/action_toConnexionFragment"
        app:destination="@id/nav_connexion" />

    <action
        android:id="@+id/action_toDetailCommandeFragment"
        app:destination="@id/DetailCommandeFragment" />

</navigation>