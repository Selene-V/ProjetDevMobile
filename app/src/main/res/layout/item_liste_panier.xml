<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp">

    <ImageView
        android:id="@+id/img_produit_panier"
        style="@style/TextCategoriesListe"
        android:layout_margin="15dp"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/imgdefaut"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tail_panier"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Titre_produit"
        style="@style/TextCategoriesListe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tail_panier" />

    <TextView
        android:id="@+id/tail_panier"
        style="@style/TextCategoriesListe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="Taille :"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintRight_toLeftOf="@id/taille_panier"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/taille_panier" />

    <TextView
        android:id="@+id/taille_panier"
        style="@style/TextCategoriesListe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="XS"
        app:layout_constraintLeft_toLeftOf="@+id/tail_panier"
        app:layout_constraintRight_toRightOf="@+id/tail_panier"
        app:layout_constraintTop_toBottomOf="@+id/tail_panier"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <TextView
        android:id="@+id/quant_panier"
        style="@style/TextCategoriesListe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="@string/quantite"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/tail_panier"
        app:layout_constraintRight_toLeftOf="@id/tarif_panier"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/quantite_panier" />

    <TextView
        android:id="@+id/quantite_panier"
        style="@style/TextCategoriesListe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12"
        app:layout_constraintLeft_toLeftOf="@+id/quant_panier"
        app:layout_constraintRight_toRightOf="@+id/quant_panier"
        app:layout_constraintTop_toBottomOf="@+id/quant_panier"
        app:layout_constraintBottom_toBottomOf="parent"
        />


    <TextView
        android:id="@+id/tarif_panier"
        style="@style/TextCategoriesListe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:text="55.20 â‚¬"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/quant_panier"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>