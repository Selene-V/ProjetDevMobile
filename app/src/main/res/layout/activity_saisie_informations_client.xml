<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SaisieInformationsClientActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <EditText
            android:id="@+id/nom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_marginTop="84dp"
            android:hint="@string/nom"
            app:layout_constraintTop_toTopOf="parent"
            />

        <EditText
            android:id="@+id/prenom"
            android:layout_width="match_parent"
            android:layout_margin="20dp"
            android:layout_height="wrap_content"
            android:hint="@string/prenom"
            app:layout_constraintTop_toBottomOf="@id/nom"
            />

        <EditText
            android:id="@+id/identifiant"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/identifiant"
            app:layout_constraintTop_toBottomOf="@id/prenom"
            />

        <EditText
            android:id="@+id/adresse_numero"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="@string/adresse_numero"
            app:layout_constraintTop_toBottomOf="@id/identifiant"
            />

        <EditText
            android:id="@+id/adresse_code_postal"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="@string/adresse_code_postal"
            app:layout_constraintTop_toBottomOf="@id/adresse_numero"
            />

        <EditText
            android:id="@+id/adresse_voie"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:hint="@string/adresse_voie"
            app:layout_constraintTop_toBottomOf="@id/adresse_code_postal"
            />


        <EditText
            android:id="@+id/adresse_ville"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/adresse_ville"
            app:layout_constraintTop_toBottomOf="@id/adresse_voie"
            />

        <EditText
            android:id="@+id/adresse_pays"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/adresse_pays"
            app:layout_constraintTop_toBottomOf="@id/adresse_ville"
            />

        <Button
            android:id="@+id/bouton_valider_modifications"
            android:text="@string/valider"
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@id/adresse_pays"
            app:layout_constraintLeft_toLeftOf="@id/adresse_pays"
            app:layout_constraintRight_toRightOf="@id/adresse_pays"
            android:onClick="onClickValider"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>